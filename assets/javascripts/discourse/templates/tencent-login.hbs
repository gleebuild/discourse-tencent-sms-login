<div class="tencent-login-wrap">
  <h2>手机号登录</h2>
  <div class="field">
    <input type="tel" placeholder="+86 13800000000" value={{this.phone}} {{on "input" (fn (mut this.phone) value="target.value")}} />
  </div>

  {{#if this.sent}}
    <div class="field">
      <input type="text" maxlength="6" placeholder="短信验证码" value={{this.code}} {{on "input" (fn (mut this.code) value="target.value")}} />
    </div>
    <button class="btn btn-primary" disabled={{this.verifying}} {{on "click" this.login}}>登录 / 注册</button>
  {{else}}
    <button class="btn btn-primary" disabled={{this.sending}} {{on "click" this.sendCode}}>发送验证码</button>
  {{/if}}

  {{#if this.message}}
    <p class="tencent-hint">{{this.message}}</p>
  {{/if}}
</div>
